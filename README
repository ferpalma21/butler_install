# Core NLP Service
docker pull motiz88/corenlp
docker run -p 9000:9000 --name coreNPL --rm -i -t motiz88/corenlp

# Elasticsearch
docker pull docker.elastic.co/elasticsearch/elasticsearch:5.4.1
docker run -p 9200:9200 -e "http.host=0.0.0.0" -e "transport.host=127.0.0.1" -e "xpack.security.enabled=false" --name elastic docker.elastic.co/elasticsearch/elasticsearch:5.4.1

# Butler Server
git clone https://github.com/jgawrilo/butler_server.git
pip install -r requirements.txt
./nltk.sh
python utils.py create

docker run -p 5000:5000 --link elastic:elastic --link coreNPL:coreNPL -i -t butler_server

# start it
python server.py


# Butler Web App
git clone https://bitbucket.org/blueridgedynamics/butler.git
npm install -g bower gulp
npm install
bower install
gulp build

# start it
npm start
